<Window
    Background="{StaticResource BackgroundBrush}"
    Height="350"
    ResizeMode="NoResize"
    Title="Transaction"
    Width="400"
    mc:Ignorable="d"
    x:Class="Finance_Tracker_WPF_API.UI.Views.TransactionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="clr-namespace:Finance_Tracker_WPF_API.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Finance_Tracker_WPF_API.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Finance_Tracker_WPF_API.Core.Models"
    xmlns:vm="clr-namespace:Finance_Tracker_WPF_API.UI.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Transaction Type  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,5"
            Text="Transaction Type:" />
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,10"
            Orientation="Horizontal">
            <RadioButton
                Content="Expense"
                GroupName="TransactionType"
                IsChecked="{Binding TransactionType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:TransactionType.Expense}}"
                Style="{StaticResource RadioButtonStyle}" />
            <RadioButton
                Content="Income"
                GroupName="TransactionType"
                IsChecked="{Binding TransactionType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:TransactionType.Income}}"
                Style="{StaticResource RadioButtonStyle}" />
        </StackPanel>

        <TextBlock
            Grid.Row="2"
            Margin="0,0,0,5"
            Text="Amount:" />
        <TextBox
            Grid.Row="3"
            Margin="0,0,0,10"
            Style="{StaticResource TextBoxStyle}"
            Text="{Binding AmountText, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding SaveCommand}" 
                           CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
            </TextBox.InputBindings>
        </TextBox>

        <TextBlock
            Grid.Row="4"
            Margin="0,0,0,5"
            Text="Description:" />
        <TextBox
            Grid.Row="5"
            Margin="0,0,0,10"
            Style="{StaticResource TextBoxStyle}"
            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="6"
            Margin="0,0,0,5"
            Text="Category:" />
        <ComboBox
            DisplayMemberPath="Name"
            Grid.Row="7"
            ItemsSource="{Binding Categories}"
            Margin="0,0,0,10"
            SelectedItem="{Binding SelectedCategory}"
            Style="{StaticResource ComboBoxStyle}" />

        <StackPanel
            Grid.Row="8"
            HorizontalAlignment="Right"
            Margin="0,10,0,0"
            Orientation="Horizontal"
            VerticalAlignment="Bottom">
            <Button
                Click="SaveButton_Click"
                Content="Save"
                IsDefault="True"
                Margin="0,0,10,0"
                Style="{StaticResource ButtonStyle}"
                Width="80" />
            <Button
                Click="CancelButton_Click"
                Content="Cancel"
                IsCancel="True"
                Style="{StaticResource ButtonStyle}"
                Width="80" />
        </StackPanel>
    </Grid>
</Window> 