<Window
    Background="{StaticResource BackgroundBrush}"
    Height="800"
    Title="Finance Tracker"
    Width="1200"
    mc:Ignorable="d"
    x:Class="Finance_Tracker_WPF_API.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="clr-namespace:Finance_Tracker_WPF_API.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <converters:BalanceLineChartConverter x:Key="BalanceLineChartConverter" />
        <converters:CategoryPieChartConverter x:Key="CategoryPieChartConverter" />
        <converters:IncomeExpenseBarChartConverter x:Key="IncomeExpenseBarChartConverter" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header and Summary Section -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="24"
                FontWeight="Bold"
                Foreground="{StaticResource PrimaryBrush}"
                Text="Finance Tracker" 
                VerticalAlignment="Center"
                Margin="0,0,20,0"/>

            <StackPanel Grid.Column="2" Margin="0,0,20,0" VerticalAlignment="Center">
                <TextBlock Text="Total Income:" Style="{StaticResource LabelTextBlockStyle}" />
                <TextBlock Text="{Binding TotalIncome, StringFormat=C2}" Foreground="Green" Style="{StaticResource ValueTextBlockStyle}" />
            </StackPanel>

            <StackPanel Grid.Column="3" Margin="0,0,20,0" VerticalAlignment="Center">
                <TextBlock Text="Total Expense:" Style="{StaticResource LabelTextBlockStyle}" />
                <TextBlock Text="{Binding TotalExpense, StringFormat=C2}" Foreground="Red" Style="{StaticResource ValueTextBlockStyle}" />
            </StackPanel>

            <StackPanel Grid.Column="4" VerticalAlignment="Center">
                <TextBlock Text="Balance:" Style="{StaticResource LabelTextBlockStyle}" />
                <TextBlock Text="{Binding Balance, StringFormat=C2}" 
                           Foreground="{Binding Balance, Converter={StaticResource AmountToColorConverter}}"
                           Style="{StaticResource ValueTextBlockStyle}" />
            </StackPanel>
        </Grid>

        <!--  Controls  -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox
                Grid.Column="0"
                ItemsSource="{Binding AvailableCurrencies}"
                Margin="0,0,10,0"
                SelectedItem="{Binding SelectedCurrency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource ComboBoxStyle}"
                Width="100" />

            <Button
                Command="{Binding AddTransactionCommand}"
                Content="Add Transaction"
                Grid.Column="1"
                Margin="0,0,10,0"
                Style="{StaticResource ButtonStyle}" />

            <Button
                Command="{Binding LoadDataCommand}"
                Content="Refresh"
                Grid.Column="3"
                Style="{StaticResource ButtonStyle}" />
        </Grid>

        <!--  Main Content  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Transactions List  -->
            <DataGrid
                AutoGenerateColumns="False"
                Grid.Column="0"
                IsReadOnly="True"
                ItemsSource="{Binding Transactions}"
                Margin="0,0,10,0"
                Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Date, StringFormat=d}" Header="Date" />
                    <DataGridTextColumn Binding="{Binding Type}" Header="Type" />
                    <DataGridTextColumn Binding="{Binding Amount, StringFormat=C}" Header="Amount" />
                    <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                    <DataGridTextColumn Binding="{Binding Category.Name}" Header="Category" />
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Content="Delete"
                                    Style="{StaticResource ButtonStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!--  Charts  -->
            <GridSplitter
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Width="5" />

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Balance Chart  -->
                <lvc:CartesianChart
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Series="{Binding Transactions, Converter={StaticResource BalanceLineChartConverter}}" />

                <!--  Income/Expense Bar Chart  -->
                <lvc:CartesianChart
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    Series="{Binding Transactions, Converter={StaticResource IncomeExpenseBarChartConverter}}"
                    XAxes="{Binding IncomeExpenseAxes}" />

                <!--  Category Chart  -->
                <lvc:PieChart Grid.Row="2" Series="{Binding CategoryTotals, Converter={StaticResource CategoryPieChartConverter}}" />
            </Grid>
        </Grid>

        <!--  Status Bar  -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Exchange Rate: 1 USD = {0:N2} {1}">
                            <Binding Path="ExchangeRate" />
                            <Binding Path="SelectedCurrency" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>